<!--Указать удаленный репозиторий, который использует организация (внутренний)-->
<repositories>
    <repository>
        <name></name>
        <id></id>
        <url></url>
    </repository>
</repositories>
<pluginRepositories>
    <pluginRepository>
        <url></url>
        <id></id>
    </pluginRepository>
</pluginRepositories>


<build>
    <!--Обновить версии плагинов жизненного цикла Maven-->
    <pluginManagement>
        <plugins>
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <version>3.2.0</version>
            </plugin>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.22.2</version>
            </plugin>
            <plugin>
                <artifactId>maven-site-plugin</artifactId>
                <version>3.12.1</version>
            </plugin>
            <plugin>
                <artifactId>maven-project-info-reports-plugin</artifactId>
                <version>3.4.1</version>
            </plugin>
        </plugins>
    </pluginManagement>

    <plugins>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-dependency-plugin</artifactId>
            <version>3.3.0</version>
            <executions>
                <!--Показать дерево зависимостей в фазе CLEAN (фаза может быть любая)-->
                <execution>
                    <id>tree</id>
                    <phase>clean</phase>
                    <goals>
                        <goal>tree</goal>
                    </goals>
                </execution>
                <!--Включитть зависимости в jar файл-->
                <execution>
                    <id>copy-dependencies</id>
                    <phase>package</phase>
                    <goals>
                        <goal>copy-dependencies</goal>
                    </goals>
                    <configuration>
                        <!--Изменить папку для зависимостей-->
                        <outputDirectory>target/lib</outputDirectory>
                        <!--Не выводить номер версии зависимости-->
                        <stripVersion>true</stripVersion>
                    </configuration>
                </execution>
            </executions>
        </plugin>
    </plugins>
</build>